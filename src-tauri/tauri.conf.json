{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "com-blackblazent-blackvideo-zephyra",
  "version": "0.1.0",
  "identifier": "com.blackblazent.blackvideo-zephyra.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "BlackVideo",
        "width": 1366,
        "height":668,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "dialog": null,
    "fs": null,
    "capabilities": {
    "default": {
      "permissions": [
        "dialog:default",
        "fs:read-dir",
        {
            "identifier": "fs:scope-read",
            "allow": ["**"] 
          },
          "asset:allow-any-scope",
          "event:default"
      ]
    }
  }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/windows/ffmpeg"
    ]
  }
}
